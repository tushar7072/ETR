@model Technology
@inject ITechnologyRepository _techRepository

@*For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860*@

@{
    ViewBag.Title = "Create New Technology";
}

<form asp-controller="Technology" asp-action="CreateTechnology" method="post" class="mt-3">
    @*<div class="form-group row">
            <label asp-for="TechID" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="TechID" class="form-control" placeholder="TechID" />
            </div>
        </div>*@
    <div>
        <div class="text-danger">
            @Html.ValidationSummary()
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TechnologyName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="TechnologyName" class="form-control" placeholder="Technology Name" name="TechnologyName" />
            <span asp-validation-for="TechnologyName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="TechnologyDescription" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="TechnologyDescription" placeholder="Description" name="TechnologyDescription" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LandingZone" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="LandingZone" asp-items="@Html.GetEnumSelectList<LandingZones>()" name="LandingZone">
                <option value="">Please Select</option>
            </select>
            <div>
                <span asp-validation-for="LandingZone" class="text-danger"></span>
            </div>
        </div>

    </div>
    <div class="form-group row">
        <button type="submit">Create Technology</button>
    </div>

    <div class="form-group row">
        <a class="text-black-50">Total Technologies - @_techRepository.GetAllTechnologies().Count()</a>
    </div>

</form>
